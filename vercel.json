{
    "version": 2,
    "builds": [
        {
            "src": "Client/next.config.js",
            "use": "@vercel/next"
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "Client/$1"
        }
    ]
}